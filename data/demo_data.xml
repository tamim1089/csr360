    </record>

    <!-- === PLEDGES === -->
    <record id="pledge_paper_reduction" model="csr.pledge">
        <field name="title">Reduce paper usage by 30%</field>
        <field name="department_id" ref="dept_hr"/>
        <field name="owner_id" ref="emp_aisha"/>
        <field name="target_value">30</field>
        <field name="unit">%</field>
        <field name="status">in_progress</field>
        <field name="notes">Digitize onboarding forms and promote e-signature.</field>
    </record>

    <record id="pledge_volunteer_hours" model="csr.pledge">
        <field name="title">Log 2,500 volunteer hours</field>
        <field name="department_id" ref="dept_hr"/>
        <field name="owner_id" ref="emp_omar"/>
        <field name="target_value">2500</field>
        <field name="unit">hours</field>
        <field name="status">in_progress</field>
        <field name="notes">Community mentorship and health drives.</field>
    </record>

    <record id="pledge_energy_saving" model="csr.pledge">
        <field name="title">Save 12,000 kWh electricity</field>
        <field name="department_id" ref="dept_facilities"/>
        <field name="owner_id" ref="emp_lina"/>
        <field name="target_value">12000</field>
        <field name="unit">kWh</field>
        <field name="status">in_progress</field>
        <field name="notes">LED retrofit and optimized AC schedule.</field>
    </record>

    <record id="pledge_plastic_free" model="csr.pledge">
        <field name="title">Eliminate single-use plastic in pantry</field>
        <field name="department_id" ref="dept_facilities"/>
        <field name="owner_id" ref="emp_hassan"/>
        <field name="target_value">30000</field>
        <field name="unit">items</field>
        <field name="status">completed</field>
        <field name="notes">Replaced plastic with reusable cutlery.</field>
    </record>

    <record id="pledge_print_reduction" model="csr.pledge">
        <field name="title">Cut printing by 50,000 pages</field>
        <field name="department_id" ref="dept_it"/>
        <field name="owner_id" ref="emp_sara"/>
        <field name="target_value">50000</field>
        <field name="unit">pages</field>
        <field name="status">in_progress</field>
        <field name="notes">Default duplex printing and quotas per user.</field>
    </record>

    <record id="pledge_green_cloud" model="csr.pledge">
        <field name="title">Migrate 60% workloads to green cloud</field>
        <field name="department_id" ref="dept_it"/>
        <field name="owner_id" ref="emp_nabil"/>
        <field name="target_value">60</field>
        <field name="unit">%</field>
        <field name="status">in_progress</field>
        <field name="notes">Partner with renewable-energy cloud providers.</field>
    </record>

    <record id="pledge_tree_planting" model="csr.pledge">
        <field name="title">Plant 2,000 trees with NGO partner</field>
        <field name="department_id" ref="dept_marketing"/>
        <field name="owner_id" ref="emp_maya"/>
        <field name="target_value">2000</field>
        <field name="unit">trees</field>
        <field name="status">in_progress</field>
        <field name="notes">Two community tree planting events planned.</field>
    </record>

    <record id="pledge_awareness_campaigns" model="csr.pledge">
        <field name="title">Run 6 climate awareness campaigns</field>
        <field name="department_id" ref="dept_marketing"/>
        <field name="owner_id" ref="emp_karim"/>
        <field name="target_value">6</field>
        <field name="unit">count</field>
        <field name="status">in_progress</field>
        <field name="notes">Social media and internal climate challenges.</field>
    </record>

    <!-- Additional Pledges for Comprehensive Demo -->
    <record id="pledge_waste_reduction" model="csr.pledge">
        <field name="title">Reduce office waste by 40%</field>
        <field name="department_id" ref="dept_facilities"/>
        <field name="owner_id" ref="emp_lina"/>
        <field name="target_value">40</field>
        <field name="unit">%</field>
        <field name="status">in_progress</field>
        <field name="notes">Comprehensive recycling program and composting initiative.</field>
    </record>

    <record id="pledge_water_conservation" model="csr.pledge">
        <field name="title">Save 50,000 gallons of water annually</field>
        <field name="department_id" ref="dept_facilities"/>
        <field name="owner_id" ref="emp_hassan"/>
        <field name="target_value">50000</field>
        <field name="unit">gallons</field>
        <field name="status">in_progress</field>
        <field name="notes">Low-flow fixtures and rainwater harvesting system.</field>
    </record>

    <record id="pledge_carbon_neutral" model="csr.pledge">
        <field name="title">Achieve carbon neutral operations</field>
        <field name="department_id" ref="dept_it"/>
        <field name="owner_id" ref="emp_nabil"/>
        <field name="target_value">100</field>
        <field name="unit">%</field>
        <field name="status">in_progress</field>
        <field name="notes">Offset all carbon emissions through renewable energy credits.</field>
    </record>

    <record id="pledge_community_outreach" model="csr.pledge">
        <field name="title">Engage 500 community members in CSR programs</field>
        <field name="department_id" ref="dept_marketing"/>
        <field name="owner_id" ref="emp_maya"/>
        <field name="target_value">500</field>
        <field name="unit">people</field>
        <field name="status">in_progress</field>
        <field name="notes">Educational workshops and community partnerships.</field>
    </record>

    <record id="pledge_sustainable_supply" model="csr.pledge">
        <field name="title">Source 80% materials from sustainable suppliers</field>
        <field name="department_id" ref="dept_hr"/>
        <field name="owner_id" ref="emp_aisha"/>
        <field name="target_value">80</field>
        <field name="unit">%</field>
        <field name="status">at_risk</field>
        <field name="notes">Challenging to find certified sustainable suppliers in region.</field>
    </record>

