<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- === DEPARTMENTS === -->
    <record id="dept_hr" model="csr.department">
        <field name="name">Human Resources</field>
    </record>
    <record id="dept_facilities" model="csr.department">
        <field name="name">Facilities</field>
    </record>
    <record id="dept_it" model="csr.department">
        <field name="name">IT</field>
    </record>
    <record id="dept_marketing" model="csr.department">
        <field name="name">Marketing</field>
    </record>

    <!-- === EMPLOYEES === -->
    <!-- Note: hr.employee uses hr.department, but we'll create employees without department link for demo -->
    <record id="emp_aisha" model="hr.employee">
        <field name="name">Aisha Khan</field>
    </record>
    <record id="emp_omar" model="hr.employee">
        <field name="name">Omar Ali</field>
    </record>
    <record id="emp_lina" model="hr.employee">
        <field name="name">Lina Haddad</field>
    </record>
    <record id="emp_hassan" model="hr.employee">
        <field name="name">Hassan Noor</field>
    </record>
    <record id="emp_sara" model="hr.employee">
        <field name="name">Sara Youssef</field>
    </record>
    <record id="emp_nabil" model="hr.employee">
        <field name="name">Nabil Farouk</field>
    </record>
    <record id="emp_maya" model="hr.employee">
