    <!-- === KPIs === -->
    <record id="kpi_total_pledges" model="csr.kpi">
        <field name="name">Total Pledges</field>
        <field name="formula">Count of all active pledges</field>
        <field name="unit">pledges</field>
    </record>

    <record id="kpi_completion_rate" model="csr.kpi">
        <field name="name">Completed %</field>
        <field name="formula">(Completed pledges / Total pledges) * 100</field>
        <field name="unit">%</field>
    </record>

    <record id="kpi_energy_saved" model="csr.kpi">
        <field name="name">Energy Saved (kWh)</field>
        <field name="formula">Sum of energy saved from all energy-related pledges</field>
        <field name="unit">kWh</field>
    </record>

    <record id="kpi_volunteer_hours" model="csr.kpi">
        <field name="name">Volunteer Hours</field>
        <field name="formula">Sum of volunteer hours from all volunteer-related pledges</field>
        <field name="unit">hours</field>
    </record>

    <record id="kpi_avg_progress" model="csr.kpi">
        <field name="name">Average Progress</field>
        <field name="formula">Average progress percentage across all pledges</field>
        <field name="unit">%</field>
    </record>

    <!-- === REPORTS === -->
    <record id="report_q3" model="csr.report">
        <field name="report_date">2025-09-30</field>
        <field name="period">2025-Q3</field>
        <field name="include_all">True</field>
        <field name="status_filter">all</field>
        <field name="ai_summary">
            70% of pledges are on track. Energy and printing initiatives show strong progress.
            Volunteer hours growing steadily. Plastic-free initiative completed ahead of schedule.
        </field>
    </record>

    <record id="report_q4" model="csr.report">
        <field name="report_date">2025-10-31</field>
        <field name="period">2025-Q4 (to date)</field>
        <field name="include_all">True</field>
        <field name="status_filter">all</field>
        <field name="ai_summary">
            Continued improvement across all departments. Green cloud migration nearing 90% completion.
            Marketing department leading with awareness campaigns and tree planting.
        </field>
    </record>

    <record id="report_hr_dept" model="csr.report">
        <field name="report_date">2025-10-31</field>
        <field name="period">2025-Q4 - HR Department</field>
        <field name="include_all">False</field>
        <field name="status_filter">all</field>
        <field name="department_ids" eval="[(4, ref('dept_hr'))]"/>
        <field name="ai_summary">
            HR department showing strong commitment to CSR initiatives with paper reduction and volunteer programs.
        </field>
    </record>
</odoo>
