<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- KPI List View -->
    <record id="view_kpi_list" model="ir.ui.view">
        <field name="name">csr.kpi.list</field>
        <field name="model">csr.kpi</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="value"/>
                <field name="unit"/>
                <field name="formula"/>
            </list>
        </field>
    </record>

    <!-- KPI Form View -->
    <record id="view_kpi_form" model="ir.ui.view">
        <field name="name">csr.kpi.form</field>
        <field name="model">csr.kpi</field>
        <field name="arch" type="xml">
            <form string="SustainHub KPI">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="unit"/>
                            <field name="value" readonly="1"/>
                        </group>
                        <group>
                            <field name="formula" placeholder="Description of how this KPI is calculated"/>
                            <field name="pledge_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- KPI Dashboard Action -->
    <record id="action_kpi_dashboard" model="ir.actions.act_window">
        <field name="name">SustainHub Dashboard</field>
        <field name="res_model">csr.pledge</field>
        <field name="view_mode">graph,kanban,list</field>
        <field name="context">{'search_default_in_progress': 1}</field>
    </record>

    <!-- KPI Action -->
    <record id="action_kpi_kpis" model="ir.actions.act_window">
        <field name="name">KPIs</field>
        <field name="res_model">csr.kpi</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>

