<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Project Form View to add CSR Pledge field -->
    <!-- Note: This will only work if project module is installed -->
    <record id="view_project_form_inherit_csr" model="ir.ui.view">
        <field name="name">project.project.form.inherit.csr</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <!-- Add CSR Pledge field in project form - after name field -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="csr_pledge_id" widget="many2one"/>
            </xpath>
        </field>
    </record>
</odoo>

